<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MQTT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/primarydrk</item>
        <item name="colorSecondary">@color/secondarydrk</item>
        <item name="android:windowBackground">#212121</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textColorHighlight">@color/primarydrk</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:backgroundTint">@color/primarydrk</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PauseButtonTheme">
        <item name="android:backgroundTint">@color/pausedrk</item>
        <item name="tint">@color/white</item>
        <item name="tintMode">src_in</item>
    </style>

    <style name="Payload">
        <item name="android:background">@color/black</item>
    </style>
</resources>