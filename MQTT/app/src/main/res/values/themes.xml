<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MQTT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:tint">@color/black</item>
        <item name="android:textColorHighlight">@color/primary</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PauseButtonTheme">
        <item name="android:backgroundTint">@color/pause</item>
        <item name="tint">@color/black</item>
        <item name="tintMode">src_in</item>
    </style>
    
    <style name="Payload">
        <item name="android:background">#212121</item>
    </style>
    <style name="Theme.MQTT" parent="Base.Theme.MQTT" />
</resources>